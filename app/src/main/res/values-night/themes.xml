<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.MeuPrimeiroAppAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color brand. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="materialButtonStyle">@style/CustomDarkButton</item>
    </style>

    <style name="CustomDarkButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/teal_700</item>
    </style>
</resources>